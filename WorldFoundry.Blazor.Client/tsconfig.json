{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "dom", "es2017", "scripthost" ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "wwwroot"
  ],
  "awesomeTypescriptLoaderOptions": {
    "silent": true,
    "transpileOnly": true,
    "useBabel": true,
    "useCache": true
  }
}
